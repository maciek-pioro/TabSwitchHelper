{
    "manifest_version": 2,
    "name": "Tab switch helper",
    "version": "1.0",
    "description": "Adds numbering to tabs when alt key is pressed to facilitate switching tabs",
    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts":["background-script.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}